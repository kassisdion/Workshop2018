<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dip">

    <LinearLayout
        android:id="@+id/itemObject_mainInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/itemObject_imageView"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"/>

        <android.support.v4.widget.Space
            android:layout_width="8dip"
            android:layout_height="8dip" />

        <TextView
            android:id="@+id/itemObject_textView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/itemObject_extraInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:padding="8dip"
            android:layout_gravity="center"
            android:id="@+id/itemObject_textView_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/itemObject_imageView_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>
